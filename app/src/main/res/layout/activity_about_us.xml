<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/myOrange"
        android:id="@+id/block"
        android:layout_marginTop="-20dp"
        app:cardCornerRadius="15dp"
        android:elevation="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heading"
                android:text="About Developer"
                android:layout_marginTop="43dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/mabook"
                android:layout_marginHorizontal="20dp"
                android:textSize="30sp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="250dp"
       android:layout_above="@id/text"
        app:cardBackgroundColor="@color/myOrange">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="290dp"
                android:src="@drawable/faisal"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/myOrange"
        android:id="@+id/text"
        android:padding="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:text="Name: Faisal Abdirashid"
                android:textSize="20sp"
                android:fontFamily="@font/mabook"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:text="Android Developer"
                android:textSize="20sp"
                android:fontFamily="@font/mabook"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:text="Languages : Kotlin,java,SQL,PHP,html,css"
                android:textSize="20sp"
                android:fontFamily="@font/mabook"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:text="Email: Anzifai6387@gmail.com"
                android:textSize="20sp"
                android:fontFamily="@font/mabook"
                />


        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get in touch !"
        android:textSize="15sp"
        android:layout_below="@id/text"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        android:fontFamily="@font/uberbold"
        />



</RelativeLayout>